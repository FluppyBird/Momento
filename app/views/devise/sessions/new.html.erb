<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Login</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
            <div class="mb-3">
              <%= form.label :email, "Email", class: "form-label" %>
              <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :password, "Password", class: "form-label" %>
              <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= form.check_box :remember_me, class: "form-check-input" %>
                <%= form.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= form.submit "Login", class: "btn btn-primary" %>
            </div>
          <% end %>

          <hr>
          <p class="text-center mt-3">
            Don't have an account?
            <%= link_to "Register", new_user_registration_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>


