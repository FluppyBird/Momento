    <div class="col-md-9">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @user.posts.each do |post| %>
          <div class="col">
            <%= link_to post_path(post), class: "text-decoration-none text-dark" do %>
              <div class="card h-100">
                <% if post.image.attached? %>
                  <%= image_tag post.image.variant(resize_to_limit: [300, 300]), class: "card-img-top" %>
                <% else %>
                  <img src="#" class="card-img-top" alt="No image">
                <% end %>
                <div class="card-body position-relative">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text"><%= post.content.truncate(50) %></p>
                  <span class="stretched-link"></span>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
