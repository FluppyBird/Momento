<div class="grid-item card h-100">
  <% if post.image.attached? %>
    <%= link_to post_path(post), data: { turbo: false } do %>
      <% if post.image.metadata[:height] > post.image.metadata[:width] %>
        <%= image_tag post.image.variant(resize_to_fill: [260.5, 347]), class: "card-img-top" %>
      <% else %>
        <%= image_tag post.image.variant(resize_to_fill: [260.5, 195]), class: "card-img-top" %>
      <% end %>
    <% end %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to post.title, post_path(post), class: "text-decoration-none text-dark", data: { turbo: false} %>
    </h5>
    <p class="card-text d-flex justify-content-between align-items-center">
      <span class="d-flex align-items-center">
        <% if post.user.profile.avatar.attached? %>
          <%= image_tag post.user.profile.avatar.variant(resize_to_fill: [24, 24]), class: "rounded-circle me-2" %>
        <% end %>
        <%= link_to post.user.username, profile_path(post.user), class: "fw-semibold text-dark text-decoration-none", data: { turbo: false}%>
      </span>
      <span>❤️ <%= post.likes.count %></span>
    </p>
  </div>
</div>



