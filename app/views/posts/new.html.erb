<div class="container mt-5">
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Create New Post</h2>

          <%= form_with model: @post, local: true, data: { turbo: false }, html: { multipart: true } do |form| %>
            <div class="mb-3">
              <%= form.label :title, "Title" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter a title..." %>
            </div>

            <div class="mb-3">
              <%= form.label :content, "Content" %>
              <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "Write something..." %>
            </div>

            <div class="mb-3">
              <%= form.label :image, "Choose File" %>
              <%= form.file_field :image, class: "form-control" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Post", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
